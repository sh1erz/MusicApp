<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.musicapp.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_to_artistDetails"
            app:destination="@id/artistFragment" />
        <action
            android:id="@+id/action_search_to_trackDetails"
            app:destination="@id/trackFragment" />
    </fragment>
    <fragment
        android:id="@+id/chartsFragment"
        android:name="com.example.musicapp.ChartsFragment"
        android:label="fragment_charts"
        tools:layout="@layout/fragment_charts" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.musicapp.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_main_to_artistDetails"
            app:destination="@id/artistFragment" />
        <action
            android:id="@+id/action_main_to_trackDetails"
            app:destination="@id/trackFragment" />
    </fragment>
    <fragment
        android:id="@+id/artistFragment"
        android:name="com.example.musicapp.ui.details.ArtistFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/trackFragment"
        android:name="com.example.musicapp.ui.details.TrackFragment"
        android:label="fragment_track"
        tools:layout="@layout/fragment_track" />
</navigation>